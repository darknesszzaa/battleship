{
  "name": "battleship",
  "version": "1.0.0",
  "description": "Battleship board game.",
  "license": "ANCP",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": " env-cmd .env nodemon -w *.*.ts --exec ts-node src/main.ts",
    "start:dev": "env-cmd .env nest start --watch",
    "start:debug": "env-cmd .env nest start --debug --watch",
    "start:prod": "env-cmd .env node dist/main",
    "lint": "eslint '{src,apps,libs,test}/**/*.ts' --fix",
    "test": "env-cmd .env jest",
    "test:watch": "env-cmd .env jest --watch",
    "test:cov": "env-cmd .env jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "echo 'No e2e tests implemented yet.'"
  },
  "dependencies": {
    "@nestjs/common": "6.11.7",
    "@nestjs/core": "6.11.7",
    "@nestjs/jwt": "6.1.1",
    "@nestjs/passport": "6.1.1",
    "@nestjs/platform-express": "6.11.7",
    "@nestjs/testing": "6.11.8",
    "@nestjs/typeorm": "6.3.1",
    "class-transformer": "0.2.3",
    "class-validator": "0.14.0",
    "mongodb": "3.5.3",
    "mongoose": "5.9.1",
    "nodemon": "2.0.2",
    "object-mapper": "5.0.0",
    "reflect-metadata": "0.1.13",
    "rimraf": "3.0.2",
    "rxjs": "6.5.4",
    "swagger-ui-express": "4.0.4",
    "typeorm": "0.2.22",
    "yamljs": "0.3.0"
  },
  "devDependencies": {
    "@nestjs/cli": "6.14.2",
    "@nestjs/schematics": "6.9.4",
    "@nestjs/testing": "6.11.7",
    "@types/express": "4.17.2",
    "@types/jest": "25.1.3",
    "@types/node": "12.12.21",
    "@types/supertest": "2.0.8",
    "env-cmd": "8.0.2",
    "jest": "25.1.0",
    "prettier": "1.19.1",
    "supertest": "4.0.2",
    "ts-jest": "25.2.0",
    "ts-loader": "6.2.1",
    "ts-node": "8.6.2",
    "tsconfig-paths": "3.9.0",
    "@typescript-eslint/eslint-plugin": "2.20.0",
    "@typescript-eslint/parser": "2.20.0",
    "eslint": "6.8.0",
    "eslint-config-prettier": "6.10.0",
    "eslint-plugin-import": "2.20.1",
    "typescript": "3.7.2"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
